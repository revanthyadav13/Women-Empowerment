@{
    ViewData["Title"] = "STEP Dashboard";
}
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent1" >
                <ul class="navbar-nav w-100 justify-content-evenly fw-bold">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="NGOs" asp-action="ContactUs">CONTACT US</a>
                    </li>
                    <li class="nav-item">
                        <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="btn btn-link nav-link text-white fw-bold">LOGOUT</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
   
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="text-center mx-auto">
            <a class="navbar-brand" href="#">
                <img src="~/Images/left-logo.png" alt="Logo" width="70" height="70" class="img-fluid">
                <span class="text-white fw-bold">Support to Training and Employment Programme for Women (STEP)</span>
            </a>
        </div>
    </nav>


    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent3" aria-controls="navbarSupportedContent3" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent3">
                <ul class="navbar-nav w-100 justify-content-evenly fw-bold">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="STEP" asp-action="AboutUs">ABOUT US</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="STEP" asp-action="Guideline">GUIDELINES</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            TRAINING SECTORS
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Agriculture">Agriculture</a></li>
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Tailoring">Tailoring</a></li>
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Stitching">Stitching</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            NGOs
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="RegisteredNgos">REGISTERED NGOs</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="STEP" asp-action="STEPRegistration">REGISTRATION</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            STATUS
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="STEP" asp-action="Status">DISPLAY APPLICATION STATUS OF BENEFICIARY</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="STEP" asp-action="FAq">FAQ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
</body>

    
