<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>NGOs Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    
</head>
<body>

    <!-- Navbar 1: Home, Contact Us, Logout -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent1">
                <ul class="navbar-nav w-100 justify-content-evenly fw-bold">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="NGOs" asp-action="ContactUs">CONTACT US</a>
                    </li>
                    <li class="nav-item">
                        <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="btn btn-link nav-link text-white">LOGOUT</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Navbar 2: Logo and Title -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="text-center mx-auto">
            <a class="navbar-brand" href="#">
                <img src="~/Images/left-logo.png" alt="Logo" width="40" height="40" class="img-fluid">
                <span class="text-white fw-bold">Non Governmental Organizations (NGOs)</span>
            </a>
        </div>
    </nav>

    <!-- Navbar 3: Criteria, Organizations, Funding Norms, Register, Status, FAQ -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent3" aria-controls="navbarSupportedContent3" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent3">
                <ul class="navbar-nav w-100 justify-content-evenly fw-bold">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            CRITERIA
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="NGOs" asp-action="Criteria">Criteria to register the organization in the STEP Scheme.</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            ORGANIZATIONS
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="NGOs" asp-action="Organisation">NGO details</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            FUNDING NORMS
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="NGOs" asp-action="Fund">Details</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="NGOs" asp-action="NGORegistration">REGISTER</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="NGOs" asp-action="Status">STATUS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="NGOs" asp-action="FAQ">FAQ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
